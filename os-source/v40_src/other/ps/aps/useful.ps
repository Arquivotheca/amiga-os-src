/tempstring 256 string def	% we need a temp string a lot

/time { % given a procedure on the stack runs it and returns time taken
	/timetaken usertime def
	exec
	usertime timetaken sub
} bind def

/showtime { % same as time but actually prints the time in milliseconds
	time
	tempstring cvs (That took ) print print ( milliseconds\n) print
} bind def

/typefile  	% (filename) - TYPEFILE -
{
	(r) file /myfile exch def
	{ 	myfile tempstring readline
		{ print (\n) print }
		{ exit }
		ifelse
	} loop
} bind def

%% Arguments: two opposite box corner coordinates x1,y1  x2,y2
/box {
	2 copy moveto
	4 -1 roll
	exch
	2 copy lineto
	exch
	4 -1 roll
	2 copy lineto
	4 -1 roll
	exch
	lineto
	closepath
	pop pop stroke
} def
