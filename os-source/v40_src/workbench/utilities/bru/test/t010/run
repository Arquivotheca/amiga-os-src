#! /bin/sh

goal="archive 127 character directory tree from stdin"
bru=${BRU:-bru}

# Parse our args.  Options include:
#
#	-s	Print our one line test goal and quit
#

while true
do
	case $1 in
		-d)	dflag="on"
			shift
			;;
		-g)	echo $goal
			exit 0
			;;
		*bru*)	bru=$1
			shift
			;;
		*)	break
			;;
	esac
done

if [ "$dflag" != "on" ]
then
	trap "rm -f bru.out ; ../bin/rmtree tmpdir000 ; exit 1" 1 2 13 15
fi

# First clean up any stuff that may be left from a previous test.

rm -f bru.out
if test -d tmpdir000
then
	../bin/rmtree tmpdir000
fi

# Run test.

top=`pwd`
for i in 00 01 02 03 04 05 06 07 08 09 10 11
do
	path="${path}tmpdir0$i/"
	mkdir tmpdir0$i
	cd tmpdir0$i
done
path="${path}abcdefg"
touch abcdefg
cd $top

echo $path | $bru -cvf bru.out -
echo "bru exit status was $?"

$bru -ivf bru.out
echo "bru exit status was $?"

$bru -dvf bru.out
echo "bru exit status was $?"

if [ "$dflag" != "on" ]
then
	../bin/rmtree tmpdir000
	rm -f bru.out
fi

exit 0
