    ng.ng_GadgetID = BADDELETE;
    BadDelete = gad = CreateGadget(BUTTON_KIND, gad, &ng,
			GA_Disabled, (BadDeleteFlags & GADGDISABLED), TAG_DONE);

    AllocBadList();

    /***** Bad Blocks List *****/
    ng.ng_LeftEdge = 32;
    ng.ng_TopEdge = 52 + XtraTop;
    ng.ng_Width = 410;
    ng.ng_Height = 104;
    ng.ng_GadgetText = "Cylinder  Head   Bytes from Index   Sector     ";
