36.15
log
@removed aptr from gfxbase.h
@
text
@d4 1
a4 1
/*	$Header: gfxbase.h,v 36.14 89/10/25 12:33:55 bart Exp $   
d7 2
a8 2
/*	$Revision: 36.14 $
/*	$Date: 89/10/25 12:33:55 $
d69 1
a69 3
	UBYTE	crb_reserved[3];
	UBYTE	DisplayMonitors;
	UBYTE	DisplayMonitors2;
a99 20

/* Display Monitor flags */
/* if these bits are set, indicates that type of monitor is hooked up */
/* to rgb port of amiga */
#define NTSC_MONITOR	0x01	/* monitor capable of accepting ntsc */
#define PAL_MONITOR	0x02	/* monitor capable of accepting pal */
#define DBLSCAN_MONITOR 0x04	/* monitor capable of 31khz h scan */
#define SPECIAL_MONITOR	0x40	/* monitor scan rates in some other variable */
#define A2024_MONITOR	0x80	/* cbm scan converting hires monitor */

#define CBM_SCAN	0x80
/* the next bits have double meanings */
/* these should be in preferences also */
/* if CBM_SCAN is false, then these definations are valid */
#define DBL_SCAN	0x40
#define SUPER_HIRES	8

/* if CBM_SCAN is true then these are valid */
#define CBM_SCAN2	0x40
#define CBM_SCANI	0x20
@


