SC = sc
ASM = asm
CFLAGS = NOSTKCHK NOICONS OPTTIME INCDIR=/include
AFLAGS = -iInclude:
LFLAGS = ND SC SD 
LINK = slink
CO = lib:c.o
LIBS = lib:sc.lib lib:scm.lib lib:amiga.lib lib:debug.lib

TARGET = xl28SVX

.c.o:
   $(SC) $(CFLAGS) $*.c

.a.o:
	$(ASM) $(AFLAGS) $*.a

OBJS = lib:c.o xl28svx.o 

all: $(TARGET)

$(TARGET): $(OBJS) 
$(TARGET):
	$(LINK) WITH <<
	FROM
		$(OBJS)
	LIB $(LIBS)
	TO $(TARGET)
	$(LFLAGS)
   <


version:
	@bumprev 1 xl28svx_rev
