SC = sc
ASM = asm
CFLAGS = NOSTKCHK NOICONS CPU=68020 OPTTIME INCDIR=Include 
AFLAGS = -iInclude:
LFLAGS = ND SC SD 
LINK = slink
CO = lib:c.o
LIBS = lib:sc.lib lib:scm.lib lib:amiga.lib lib:debug.lib

TARGET = cdgsxl

.c.o:
   $(SC) $(CFLAGS) $*.c

.a.o:
	$(ASM) $(AFLAGS) $*.a

OBJS = lib:c.o cdgsxl.o RunCDXL.o DisPlay.o AudioCDXL.o ILBMSupport.o CopRoutine.o IFFP/parse.o IFFP/unpacker.o IFFP/iffpstrings.o IFFP/ilbmr.o 

all: $(TARGET)

cdgsxl: $(OBJS) 
cdgsxl:
	$(LINK) WITH <<
	FROM
		$(OBJS)
	LIB $(LIBS)
	TO $(TARGET)
	$(LFLAGS)
   <


version:
	@bumprev 1 cdgsxl_rev
