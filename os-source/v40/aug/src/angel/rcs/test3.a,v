text
@	INCLUDE "exec/ables.i"


CALLSYS	macro	*
	jsr	LVO\1(a6)
	endm

LVOAllocMem	EQU	-$c6
LVOFreeMem	EQU	-$d2
LVOForbid	EQU	-132
LVOPermit	EQU	-138
LVODisable	EQU	-120
LVOEnable	EQU	-126

	section text,code

_Test:
	move.l	4,a6
	move.l	#500,d0		; byteSize
	move.l	#2,d1		; requirements	(must be MEMF_FAST)
	CALLSYS	AllocMem
	move.l	d0,a1		; put memory block here
	add.l	#100,d0
	move.l	d0,a2		; set address to which to write
	move.l	#4444,(a2)	; put something in it
	move.l	#500,d0		; byteSize

	CALLSYS	FreeMem
	move.l	(a2),d0		; Access memory block illegally
	move.l	#0,d0

	rts			; exit with error code==0

	end

@
