_PrintDataFault:
	btst.b	#6,STK+$f(sp)		; Was it a read or write?
	beq.s	pdf_write		; Branch if write
	DUMPMSG	0,<'| Read Data Cycle Fault, '>
	bra	pdf_cont
pdf_write:
	DUMPMSG	0,<'| Write Data Cycle Fault, '>
pdf_cont:
	rts



